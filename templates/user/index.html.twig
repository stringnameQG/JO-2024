{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block main %}
<main>
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_delete', {'id': user.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  {% if totalPages >= 1 %}
    <aside class='pagination'>
      <a href="{{ path('app_user_index', {'page': currentPage - 1}) }}"><</a>
      <a href="{{ path('app_user_index', {'page': currentPage + 1}) }}">></a>
    </aside>
</main>
  {% endif %}
{% endblock %}
